extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Registos de Plantas
    .w3-container
      table.w3-table-all
        tr
          th Identificador 
          th Freguesia
          th Espécie
          th Estado  
          th Número de Intervenções
        
        each c in clist
          tr
            td
              a(href="/"+c._id) #{c._id}
            td= c.Freguesia
            td
              a(href="/"+c.) #{c.Espécie}
            td= c.Estado 
            td= c.AreasInvestigacao
              
    footer.w3-container.w3-teal
      h5 Generated by ENGWEB2023 in #{d}